<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>
        THE LAUGHING SOCK
    </title>
      <link rel="stylesheet" href="../css/socks.css">
  </head>
  <body>
    <nav>
      <% if (currentUser) { %>
        <form action="/sessions?_method=DELETE" method="POST">
          <input type="submit" value="Logout"/>
          <img src="../images/shopping-cart.png"/>
        </form>
        <% if (currentUser.username == 'emfoxily') { %>
        <a href="/create">
          ADD NEW WAND
        </a>
        <% } %>
      <% } else { %>
      <li>
        <a href="/users/register">
          register
        </a>
        <a href="/sessions/new">
          login
        </a>
      </li>
    <% } %>
    </nav>

    <div class = "header">
      <a href="/">
        <img src = "../images/laughingsock.png"/>
      </a>
    </div>
    <div class = "container">
      <div class = "productContainer">
          <% for (i = 0; i < socks.length; i++) { %>
            <div class = "productBox">
              <a href = "<%= socks[i].id %>">
                <img src = "<%= socks[i].img %>"/>
              </a>
              <h5>
                "<%= socks[i].name %>"
              </h5>
              <li>
                $<%= socks[i].price %>.00
              </li>
              <br/>
              <% if (socks[i].qty > 0) { %>
                <li class = "inStock">
                  IN STOCK
                </li>
              <% } else { %>
                <li class = "outStock">
                  OUT OF STOCK
                </li>
              <% } %>
            </div>
          <% } %>
    </div>
  </body>
</html>
